<div class="container">
  <div class="section"></div>
  <div class="row ">
    <h4 class=" header-with-button"><%=@course.title %> </h4>
    <span class="new badge inline-badge grey" data-badge-caption="<%="Draft" %>"></span>
    <%= link_to new_course_path, :class=>"right btn " + (@lessons.size == 0 ? "disabled": "" ) do %>
      Publish <%=material_icon.public.css_class('right')%>
    <%end%>
  </div>
  <div class="divider"></div>
  <div class="row">
    <div class="col m4 s12">
      <h5>Course Contents</h5>
      <%= render 'lessonSidebar' %>
    </div>
    <div class="col m8 s12">
      <div class="row">
        <div class="col m6 s12 show-field">
          <label>Lesson Title </label>
          <p><%=@lesson.title %></p>
        </div>
        <div class="col m6 s12 show-field">
          <label>YouTube URL </label>
          <p><%=@lesson.video_url %></p>
        </div>
        <div class="col s12 show-field">
          <label>Lesson Info </label>
          <p><%=@lesson.lesson_info %></p>
        </div>
        <div class="col s12 show-field">
          <label>Keywords </label>
          <p><%=@lesson.keywords %></p>
        </div>
        <div class="col s12 show-field">
          <p>Materials</p>
          <% @lesson.materials.each do |material| %>
            <p><%= material.title %></p>
          <%end%>
        </div>
      </div>

      <div class="row">
        <div class="col s12">
          <%= link_to edit_course_lesson_path(@course, @lesson), :class=> "btn waves-effect" do %>
            <i class="material-icons left">mode_edit</i>
            Edit
          <%end%>
        </div>
      </div>


    </div>
  </div>
</div>