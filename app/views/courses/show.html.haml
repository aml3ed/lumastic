.container.section
  = render 'components/community-header', :community => @community
  .row
    .col.m4.s12
      = render 'components/toc-course'
    .col.m8.s12
      .row
        .col.s6.show-field
          %label Course Info
          %p= @course.course_info
        .col.s3.show-field
          %label Created
          %p= @course.created_at.strftime("%m/%d/%Y")
        .col.s3.show-field
          %label Started By
          %p= @course.user.display_name
        .col.s12.show-field
          %label Keywords
          %p= @course.keywords
      .row
        .col.s12
          = link_to edit_course_path(@course), :class=> "btn-flat waves-effect" do
            =material_icon.mode_edit.css_class('left')
            Edit
