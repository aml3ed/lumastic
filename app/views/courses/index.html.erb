<p id="notice"><%= notice %></p>

<h1>Your Courses</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Subject</th>
      <th>Published</th>
      <th colspan="4">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.title %></td>
        <td><%= course.subject %></td>
        <td><%= course.published %></td>
        <td><%= link_to 'View Course', course %></td>
        <td><%= link_to 'Edit Course', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy Course', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Lessons', course_lessons_path(:course_id => course.id) %></td>
      </tr>
    <% end %>

  </tbody>
</table>

<br>

