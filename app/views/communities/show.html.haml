- share_tags(og_type: "community",
  og_title: @community.name,
  og_description: strip_tags(sanitize(@community.description)))

= render('components/community-header')
.container
  .row.no-margin.flex{style: "align-items: center"}
    .col.f1
      %ul.tabs
        %li.tab.col.s4
          %a{:href => "#courses"}
            = icon('fas', 'book')
            Courses
        %li.tab.col.s4
          %a{:href => "#discussions"}
            = icon('fas', 'comments')
            Discussions
        %li.tab.col.s4
          %a{:href => "#guidelines"}
            Details
      .divider
.container
  .section
    #courses
      .row
        .col.s12
          = render('components/new-course-card')
        - @courses.each do |course|
          .col.l3.m6.s12
            = render('components/course-card', community: @community, course: course)

    #discussions
      .row
        .col.s12
          - @discussions.each do |discussion|
            =link_to discussion_path(discussion), class: " text-color" do
              =discussion.title
              .secondary-content.text-color
                =icon('fas', 'comment')
                =discussion.comments.count
        .col.s12
          = render('components/new-discussion-card')
    #guidelines
      .row
        .col.l9.m6.s12
          %h6 Community Details
          .writeup= sanitize @community.description
        .col.l3.m6.s12
          %h6 Curators
          - @community.curators.each do |curator|
            = link_to '', class: "author text-color valign-wrapper", style: "margin-bottom: 5px" do
              = image_tag curator.get_avatar(30), class: "circle responsive-img", width: 30, height: 30
              .truncate= curator.display_name


