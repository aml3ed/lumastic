.container.section
  = render('components/community-header')
  .row
    .col.m7.s12
      .row.no-margin
        .col.s12
          %h5.header-with-link
            =material_icon.library_books
            Courses
          = link_to new_course_path(:community_id => @community.id), class: "icon-action btn-flat waves-effect" + disabled_if_no_user do
            = material_icon.library_add.css_class('left')
            Create
          .divider
        - @courses.each do |course|
          .col.l6.m12.s12
            = render('components/course-card', :course => course)
    .col.m5.s12
      .col.s12
        %h5.header-with-link
          =material_icon.forum
          Discussions
        = link_to new_discussion_path(:community_id => @community.id), class: "icon-action btn-flat waves-effect" + disabled_if_no_user do
          = material_icon.add.css_class('left')
          New
        .divider
      .col.s12
        - if not @discussions.empty?
          .collection
            - @discussions.each do |discussion|
              =link_to discussion_path(discussion), class: "collection-item text-color" do
                =discussion.title
                .secondary-content.text-color
                  =icon('fas', 'comment')
                  =discussion.comments.count
        - else
          There are no discussions

      .col.s12
        %h5.header-with-link.grey-text
          =icon('fas', 'bell')
          Recent Activity
        %p.inline.grey-text.tooltipped{"data-tooltip" => "This feature is coming soon!", "data-position" => "top"}
          =icon('far', 'question-circle')
        .divider
