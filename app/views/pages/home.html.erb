<%= render 'pages/homeHero' %>
<div class="container">
  <h4 class="header-with-link">Learn Something New </h4><%= link_to "See More", "#" %>
  <div class="row">

  <%@courses.each do |course|%>
    <div class="col l3 m6 s12">
      <div class="card hoverable">

        <div class="card-image">
          <%=link_to "", view_course_lesson_path(course, course.first_lesson), :class=>"container-clickable" %>
          <%= image_tag "testimages/ballThumb.jpg"%>
        </div>
        <div class="card-content">
          <%=link_to "", view_course_lesson_path(course, course.first_lesson), :class=>"container-clickable" %>
          <span class="card-title home-card-title"><%=course.title %></span>
        </div>
        <div class="card-action">
          <%=link_to "See Course", view_course_lesson_path(course, course.first_lesson), :class=>"waves-effect" %>
        </div>
      </div>
    </div>
  <%end%>
  </div>
</div>
