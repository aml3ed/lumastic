<center>
  <div class="section"></div>
      <div class="container ">
        <div class="z-depth-1 row paper-popup">

            <%= form_for(resource, as: resource_name, :class=>"col s12", url: registration_path(resource_name)) do |f| %>
            <%= devise_error_messages! %>
            <div class='row'>
              <div class='col s12'><h5>Welcome to Lumastic!</h5><h6>Create your account to get started</h6></div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", type: "email", id: 'email', class: "validate" %>
                <%= f.label :email, for: "email" %>
              </div>
            </div>

            <div class="row">
              <div class='input-field col s12'>
                <%= f.password_field :password, type: "password", autocomplete: "off" , id: 'password', class: "validate" %>
                <%= f.label :password, for: "password" %>
              </div>
            </div>

            <div class='row'>
              <div class='input-field col s12'>
                <%= f.password_field :password_confirmation, type: "password", autocomplete: "off" , id: 'password_confirmation', class: "validate" %>
                <%= f.label :password_confirmation, for: "password_confirmation" %>
              </div>
            </div>

            <br />
            <center>
              <div class='row'>
                <%= f.button :submit, class: "col s12 btn btn-large waves-effect form-submit" do %>
                  Sign Up
                <%end%>
              </div>
            </center>
          <% end %>
        </div>
      </div>
      Already have an account? <%= link_to "Login", new_user_session_path  %>
    </center>

