%center
  .section
  .container
    .card.row.paper-popup
      .card-content
        = form_for(resource, as: resource_name, :class=>"col s12", url: registration_path(resource_name), html: { method: :put }) do |f|
          = devise_error_messages!
          .row
            .col.s12
              %h5 Your Account
          .row
            .profile-pic
              = image_tag resource.get_avatar(100), class: "circle responsive-img"
              .file-field
                .btn-flat{onclick: "document.getElementById('avatar').click();"}
                  %span
                    = icon('fas', 'edit', class: 'left')
                    Change Picture
                = f.file_field :avatar, id: "avatar", style: "display: none;"
                .file-path-wrapper
                  %input.file-path.validate
          .row
            .input-field.col.s12
              = f.text_field :display_name, autofocus: true, autocomplete: "display_name", type: "text", id: 'display_name', placeholder: "First and last preferably"
              = f.label :display_name, "Your Name", for: "display_name"
          .row
            .input-field.col.s12
              = f.label :email
              = f.email_field :email, autocomplete: "email"
          - if devise_mapping.confirmable? && resource.pending_reconfirmation?
            %div
              Currently waiting confirmation for: #{resource.unconfirmed_email}
          .row.no-margin
            .col.s12.left-align
              Reset your password:
              %br
              %em (leave blank if you do not want to change it)
            .input-field.col.s12
              = f.label :password, "New Password"
              = f.password_field :password, autocomplete: "off"
          .row.no-margin
            .input-field.col.s12
              = f.label :password_confirmation
              = f.password_field :password_confirmation, autocomplete: "off"
          .row.no-margin
            .input-field.col.s12
              = f.label :current_password
              = f.password_field :current_password, autocomplete: "off"
          .row
            = f.button :submit, class: "col s12 btn btn-large waves-effect form-submit" do
              Save
          -#.row
          -#  = link_to "Delete My Account", registration_path(resource_name), data: { confirm: "Are you sure you want to delete your account?" }, method: :delete, class: "btn-flat"
