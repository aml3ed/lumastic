<% flash.each do |type, message| %>
  <% if type == "notice" %>
    <script>
        $(function() {
            M.toast({html: "<%= message %>"});
        });
    </script>
  <% elsif type == "error" %>
    <script>
        $(function() {
            M.toast({html: "<%= message %>"});
        });
    </script>
  <% else %>
    <<script>
    $(function() {
        M.toast({html: "<%= message %>"});
    });
</script>
  <% end %>
<% end %>