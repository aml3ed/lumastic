.navbar-fixed
  %nav
    .nav-wrapper.nav-flex
      .f0
        %a.menu-button.sidenav-trigger.show-on-large.no-link-link{"data-target" => "slide-out"}
          = material_icon.menu
        = link_to root_path, :class=>"brand-logo" do
          = image_tag 'LumasticV16.svg'
      %ul.f1.hide-on-med-and-down
        %li#search-nav-item
          = form_tag search_path, method: :get, class: "hide-on-med-and-down" do
            #search-form
              #search-container.valign-wrapper
                .search-icon= material_icon.search
                = text_field_tag :search, params[:search], placeholder: "What makes you curious?", type: "search", id: "search-input"
                #close-icon.search-icon= material_icon.close
              #searchResults
      %ul.f0.hide-on-med-and-down
        - if !current_user
          %li
            = link_to "Sign Up", new_user_registration_path, :class=>" btn waves-effect waves-light"
          %li
            = link_to "Login", new_user_session_path, :class=>"  btn dark-button waves-effect waves-light"
        - else
          %li.user-nav
            %a.dropdown-trigger.valign-wrapper{"data-target" => "userDropdown"}
              = image_tag current_user.get_avatar(30), class: "responsive-img circle", width: "30", height: "30"
              %span
                = current_user.display_name != "" ? current_user.display_name : current_user.email
              = material_icon.arrow_drop_down.css_class("right")
            %ul#userDropdown.dropdown-content
              %li
                %a{:href => "/member/"}
                  %i.material-icons account_circle
                  My Profile
              %li
                = link_to destroy_user_session_path, :method => :delete do
                  = icon('fas', 'sign-out-alt')
                  Signout
- if current_user
  = render 'layouts/sidenav-user'
- else
  = render 'layouts/sidenav'
