.container.section
  .row.no-margin
    .col.s12
      = link_to admin_dashboard_path do
        =icon('fas', 'arrow-left')
        Back to Dashboard
      %h4{style: "margin-top: 0"} Members
      .divider
  .row.no-margin
    .col.s12
      %table.highlight
        %thead
          %tr
            %th
              Name
            %th
              Email
            %th
              Joined
            %th
              Last Login
            %th
              Referred by
            %th
        %tbody
          - @users.each do |user|
            %tr
              %td= user.try(:display_name)
              %td= user.try(:email)
              %td= user.try(:created_at).nil? ? "" : time_ago_in_words(user.try(:created_at)) + " ago"
              %td= user.try(:last_sign_in_at).nil? ? "" : time_ago_in_words(user.try(:last_sign_in_at)) + " ago"
              %td= user.try(:referred_by)
              %td
                %a.dropdown-trigger{"data-target" => "actionDropdown"}
                  =icon('fas', 'ellipsis-v')
                %ul#actionDropdown.dropdown-content
                  %li
                    = link_to admin_user_destroy_path(user), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "grey-text" do
                      = icon('fas', 'trash')
                      Delete
                  %li
                    = link_to masquerade_path(user) do
                      = icon('fas', 'user-secret')
                      Login As