.container.section
  .row.no-margin
    .col.s12
      = link_to admin_dashboard_path do
        =icon('fas', 'arrow-left')
        Back to Dashboard
    .col.s12
      %h4{style: "margin-top: 0"} Communities
      .divider
  .row.no-margin
    .col.s12
      %table.highlight
        %thead
          %tr
            %th
              Name
            %th
              Members
            %th
              Courses
            %th
              Last Updated
            %th
              Actions
        %tbody
          - @communities.each do |community|
            %tr
              %td= link_to community.try(:name), community_path(community)
              %td= community.memberships.count
              %td= community.courses.count
              %td= time_ago_in_words(community.updated_at) + " ago"
              %td
                = link_to community_path(community), method: :delete, data: {confirm: "Are you sure you want to delete this?"}, class: "grey-text" do
                  = icon('fas', 'trash')
                  Delete